<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/charactersFragment">

    <fragment
        android:id="@+id/charactersFragment"
        android:name="com.tonyk.android.rickandmorty.ui.CharactersFragment"
        android:label="CharacterListFragment"
        >
        <action
            android:id="@+id/action_characterListFragment_to_characterDetailFragment"
            app:destination="@id/characterDetailFragment"
         />

    </fragment>
    <fragment
        android:id="@+id/characterDetailFragment"
        android:name="com.tonyk.android.rickandmorty.ui.CharacterDetailsFragment"
        android:label="CharacterDetailFragment"
       >
        <action
            android:id="@+id/actionToLocationDetail"
            app:destination="@id/locationDetailFragment"
         />
        <action
            android:id="@+id/action_characterDetailFragment_to_episodeListFragment"
            app:destination="@id/episodeListFragment" />
    </fragment>
    <fragment
        android:id="@+id/locationDetailFragment"
        android:name="com.tonyk.android.rickandmorty.ui.LocationDetailsFragment"
        android:label="LocationDetailFragment"
       >

        <action
            android:id="@+id/actionToCharacterDetail"
            app:destination="@id/characterDetailFragment"
            app:launchSingleTop="false"
            app:popUpToInclusive="false" />
        <action
            android:id="@+id/actionToLocationList"
            app:destination="@id/locationListFragment" />
    </fragment>
    <fragment
        android:id="@+id/locationListFragment"
        android:name="com.tonyk.android.rickandmorty.ui.LocationsFragment"
        android:label="LocationListFragment"
    >
        <action
            android:id="@+id/actionToLocationDetail"
            app:destination="@id/locationDetailFragment"
          />
    </fragment>
    <fragment
        android:id="@+id/episodeListFragment"
        android:name="com.tonyk.android.rickandmorty.ui.EpisodesFragment"
        android:label="EpisodeListFragment"
       >
        <action
            android:id="@+id/actionToEpisodeDetail"
            app:destination="@id/episodeDetailFragment"
            />
    </fragment>
    <fragment
        android:id="@+id/episodeDetailFragment"
        android:name="com.tonyk.android.rickandmorty.ui.EpisodeDetailsFragment"
        android:label="EpisodeDetailFragment"
     >
        <action
            android:id="@+id/actionToCharacterDetailFragment"
            app:destination="@id/characterDetailFragment"
          />
    </fragment>
</navigation>